@model IEnumerable<Core_Auth.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model)
{
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <div class="container-fluid text-center">
                <img src="@item.Picture" width="100" height="50" class="mr-2 shadow rounded-circle img-thumbnail" />
                Name: @item.ClientName
            </div>
            <div>

                <a class="btn btn-primary btn-sm  p-0" asp-action="Edit" asp-controller="Clients" asp-route-id="@item.ClientId">Edit</a> &nbsp;&nbsp;
                    <a class="btn btn-danger btn-sm  p-0" asp-action="Delete" asp-controller="Clients" asp-route-id="@item.ClientId">Delete</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped table-sm" width="100">
                <thead>
                    <tr>
                        <th class="table-dark">SpotId</th>
                        <th class="table-dark">SpotName</th>
                    </tr>
                </thead>
                <tbody class="table table-secondary table-sm">
                    @foreach (var singleEntry in item.BookingEntries)
                    {
                        <tr>
                            <td>@singleEntry.SpotId</td>
                            <td>@singleEntry.Spot.SpotName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}