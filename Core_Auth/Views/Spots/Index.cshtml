@model IEnumerable<Core_Auth.Models.Spot>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Create New</a>
</p>
<table class="table table-bordered table-striped table-primary" weight="100">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SpotName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="table-light">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SpotName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpotId" class="btn btn-success btn-sm">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.SpotId" class="btn btn-secondary btn-sm">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.SpotId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
